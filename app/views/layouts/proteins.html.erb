<!doctype html>
<html lang="en">
<head>
		<meta charset="utf-8">
		<title><%= @title? @title :'PCoM' %></title>
		<link rel="shortcut icon" href="/images/favicon.ico">
		<%= stylesheet_link_tag "application", media: "all" %>
		<%= javascript_include_tag "application" %>
		<%= csrf_meta_tag %>
</head>
<body id="body_normal">
<script>
		$("ul.menu li").hover(function() {
				$(">ul:not(:animated)",this).slideDown("fast");
				},
				function(){$(">ul",this).slideUp("fast");
		});
</script>
<div id="container">
<div id="header_normal">
<div id="header">
<div id="header_inner">
	<table>
		<tr>
			<td><%= image_tag 'lowtemp.png' %></td>
			<td style="width: 330px;"><h3>PCoM-DB</h3></td>
			<td ><h5>Protein co-migration database for photosynthetic organisms</h5></td>
		</tr>
	</table>
	<%= render 'layouts/menu' %>
</div>
</div>
</div>

<div id="content">
		<%= yield %>
</div>
<div id="foot">
		<%= render 'layouts/foot' %>
</div>

</div>
</body>
</html>